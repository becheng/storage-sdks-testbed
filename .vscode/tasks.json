{
    "version": "2.0.0",
    "tasks": [
        {
            // build test project only, alternativily you can use the Ctrl+Shift+B vscode shortcut 
            "label": "build-tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/tests/storageAdapterApi.Tests/storageAdapterApi.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        { 
            "label": "debug-tests", 
            "type": "process", 
            "isBackground": true, 
            "command": "dotnet", 
            "args": [ "test" ], 
            "options": 
                { 
                    "cwd": "${workspaceFolder}/storageSDKsTestBed.Tests", 
                    "env": 
                    { 
                        "VSTEST_HOST_DEBUG": "1", 
                        "ASPNETCORE_ENVIRONMENT": "Development"
                    }, 
                }, 
            "group": "test", 
            "presentation": 
                { 
                    "echo": true,
                    "reveal": "always",
                    "focus": false,
                    "panel": "shared"
                },
            "problemMatcher": "$msCompile" 
        }
    ]
}